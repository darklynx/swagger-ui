{{#if isRequest}}
<td colspan="5" class="requestParam">
	<table style="width: 100%">
		<tbody>
			<tr>
				<td style="width: 100px; max-width: 100px; min-width: 100px" class="code"><label for="{{valueId}}">{{name}}</label></td>
				<td style="width: 370px; max-width: 370px; min-width: 370px">
					<textarea class="body-textarea" name="{{name}}" id="{{valueId}}">{{#if default}}{{default}}{{/if}}</textarea>
					<br />
					<div class="parameter-content-type" />
				</td>
				<td style="width: 270px; max-width: 270px; min-width: 270px"><span class="markdown">{{{description}}}</span></td>
				<td style="width: 50px; max-width: 50px; min-width: 50px">{{{paramType}}}</td>
				<td>Request Class</td>
			</tr>
		</tbody>
	</table>
	<div>
		<h4>Request Class</h4>
		<span class="model-signature"></span>
	</div>
</td>
{{else}}
<td class='code'><label for='{{valueId}}'>{{name}}</label></td>
<td>

	{{#if isBody}}
		{{#if isFile}}
			<input type="file" name='{{name}}' id='{{valueId}}'/>
			<div class="parameter-content-type" />
		{{else}}
			{{#if default}}
				<textarea class='body-textarea' name='{{name}}' id='{{valueId}}'>{{default}}</textarea>
        <br />
        <div class="parameter-content-type" />
			{{else}}
				<textarea class='body-textarea' name='{{name}}' id='{{valueId}}'></textarea>
				<br />
				<div class="parameter-content-type" />
			{{/if}}
		{{/if}}
	{{else}}
		{{#if isFile}}
			<input type="file" name='{{name}}' id='{{valueId}}'/>
			<div class="parameter-content-type" />
		{{else}}
			{{#renderTextParam this}}
			{{/renderTextParam}}
		{{/if}}
	{{/if}}

</td>
<td class="markdown">{{{description}}}</td>
<td>{{{paramType}}}</td>
<td><span class="model-signature"></span></td>
{{/if}}
